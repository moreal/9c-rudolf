{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "javascript": {
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    },
    "formatter": {
      "quoteStyle": "single",
      "indentStyle": "space"
    }
  },
  "linter": {
    "rules": {
      "style": {
        "useImportType": "off"
      }
    }
  },
  "json": {
    "formatter": {
      "indentStyle": "space"
    }
  },
  "files": {
    "include": ["src", "test", "*"],
    "ignore": ["node_modules", "dist"]
  }
}
